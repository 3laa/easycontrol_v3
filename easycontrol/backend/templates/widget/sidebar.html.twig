{% block body %}
  {% set website =  backendVars.activeWebsite.mainMenu %}
  {% set shop =  backendVars.activeShop.mainCategory %}

  <div class="sidebar">
    <div class="sidebar-tree" data-type="website">
      <ul class="tree-list accordion" id="sidebarTreeWebsite">
        <li class="list-item" data-id="{{ website.id }}">
