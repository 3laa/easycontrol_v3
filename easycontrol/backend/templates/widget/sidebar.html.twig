            <div class="item-icon icon-main">
              <span class="material-icons">web</span>
            </div>

            <div class="item-icon icon-settings">
              <span class="material-icons" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">settings</span>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <div class="dropdown-item -action" data-action="add" data-id="{{ website.id }}">
                  <span class="material-icons">add</span> Add
                </div>
              </div>
            </div>

            <a href="{{ path('backend_website_edit', {website: website.id}) }}" target="mainIframe" class="item-title">Website</a>

          </div>
        </li>
      </ul>
      {{ include('@backend/_theme/_function/website-tree.html.twig', {menu: website}) }}
